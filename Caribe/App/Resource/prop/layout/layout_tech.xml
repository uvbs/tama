<?xml version="1.0" encoding="utf-8"?>
<layout font_text_m="normal.ttf" font_text_b="bold.ttf">
  <!--모든 씬 백판-->
  <common_bg>
    <wnd posx="0" posy="0" width="640" height="360" key="wnd.common_bg">
      <!--백판-->
      <img posx="0" posy="0" file="common_bg_bottom.png" />
      <!--백버튼-->
      <butt posx="20" posy="20" key="butt.back" img_up="common_butt_back.png" />
      <butt file="icon_info.png" posx="552" posy="25" key="butt.info">
        <!--헬프버튼-->
        <tooltip file="layout.xml" layout="help_tooltip_tech" text="3" debug="101" />
      </butt>
    </wnd>
  </common_bg>
  <tech_game>
    <wnd key="wnd.root.game">
      <!--내부 백판-->
      <img posx="64" posy="57" file="common_bg_inside.png" key="img.tech.bg.black">
        <wnd posx="32" posy="8" width="321" height="277" key="wnd.tree.root">
          <!--특성트리가 그려질 루트-->
        </wnd>
      </img>
      <!--게임모드 UI-->
      <butt file="corps_legionnaire_bg.png" posx="67" posy="24" key="butt." num="9" distx="48">
        <img key="img.unit" _touchable="off"></img>
        <img posx="-3" posy="-3" file="unit_glow.png" show="off" key="img.glow" blend="add" format_surface="argb8888"></img>
        <img posx="21" posy="0" file="circle_bg_s.png" key="img.bg.level">
          <text posx="center" posy="center" font="font_res_num" font_style="stroke" font_size="15" key="text.point" />
        </img>
        <text posx="center" posy="34" font="font_res_num" font_style="stroke" font_size="18" key="text.level.open" text_col="white" show="off" />
        <img posx="center" posy="-8" file="lock_small.png" key="img.lock" show="off"></img>
      </butt>
      <img posx="418" posy="66" file="skill_right_bg.png" key="img.right.panel">
        <!--오른쪽 판-->
        <wnd posx="9" posy="25" key="img.select" />
        <text posx="16" posy="88" key="text.name" text_col="white" font_size="25" font="font_text_b"></text>
        <text posx="16" posy="105" key="text.desc" text_col="col_skill_desc" font_size="18" width="137"></text>
        <text posx="100" posy="82" key="text.level.tech" text_col="white" font_size="15" width="44" align="right" font="font_res_num" />
        <text posx="15" posy="202" key="text.limit.level" text_col="red" />
        <wnd posx="0" posy="218" key="wnd.root.under">
          <!--+버튼/특성포인트/연구시간/필요자원-->
          <text posx="93" posy="9" key="text.point.selected" text_col_r="177" text_col_g="58" text_col_b="58" font_size="15" align="center" width="56">
            <!--특성포인트-->
          </text>
          <wnd key="wnd.root.plus">
            <!--+버튼 관련-->
            <butt img_up="butt_plus.png" posx="22" posy="4" key="butt.plus"></butt>
            <text posx="11" posy="46" key="text.time" text_col="white" style="stroke" font_size="18" />
            <wnd posx="90" posy="5" width="57" height="40" key="wnd.need.res">
              <text posx="0" posy="17" key="text.need.gold" text_col="white" style="stroke" type="hcenter" font_size="15"></text>
              <_text posx="0" posy="17" key="text.need.resource1" text_col="white" style="stroke" align="hcenter" font_size="15" show="off" />
              <_text posx="0" posy="25" key="text.need.resource2" text_col="white" style="stroke" align="hcenter" font_size="15" show="off" />
            </wnd>
            <img posx="100" posy="20" file="icon_flask.png" key="img.flask" show="off">
              <text posx="13" posy="3" font="font_res_num" font_style="stroke" font_size="20" text_col="white" key="text.need.point"></text>
            </img>
          </wnd>
          <wnd key="wnd.root.research">
            <!--연구중 관련-->
            <img posx="12" posy="41" key="img.research.bg" file="exp_bg_research.png" />
            <pbar posx="13" posy="42" key="pbar.research" img1="exp_research.png">
              <text posx="1" posy="1" key="text.remain.time" text_col="white" style="stroke" width="124" align="center" _text="1"></text>
            </pbar>
            <butt posx="12" posy="5" img_up="common_butt_small.png" key="butt.research.complete">
              <img posx="16" posy="14" file="hero_cash.png" scale="0.4" />
              <text posx="center" posy="2" text="2078" font="font_text_b" font_style="stroke" font_size="20">
                <!--즉시완료-->
              </text>
              <text posx="center" posy="16" font="font_res_num" font_style="stroke" font_size="18" key="text.cost.complete">
                <!--캐쉬 가격-->
              </text>
              <!--즉시완료 버튼-->
            </butt>
            <text posx="93" posy="25" key="text.hero.researching" text_col="white" style="stroke" align="center" font_size="15" width="56"></text>
          </wnd>
          <wnd key="wnd.root.lock">
            <!--잠금해제 관련-->
            <butt img_up="common_butt_mid.png" posx="2" posy="5" key="butt.lock.free">
              <img posx="4" posy="6" file="lock_mid" />
              <img posx="25" posy="20" file="lock_small.png" key="img.butt.lock" show="off"></img>
              <wnd posx="22" width="64" height="19">
                <text posx="center" posy="center" text="2023" font="font_text_b" align="hcenter" font_style="stroke" font_size="25" />
              </wnd>
              <wnd posx="22" width="64" posy="19" height="19">
                <spr posx="4" posy="0" file="ui_res_gold.spr" show="off" key="spr.butt.gold" debug="33"></spr>
                <text posx="20" posy="center" font="font_res_num" font_style="stroke" font_size="18" key="text.cost.unlock" />
              </wnd>
            </butt>
            <text posx="93" posy="17" key="text.gold.have" font_size="15" align="center" width="56"></text>
          </wnd>
          <wnd key="wnd.root.complete">
            <!--연구완료-->
            <text posx="0" posy="25" key="text.complete" text_col="white" style="stroke" font_size="40" width="82" align="center" font="font_text_b"></text>
          </wnd>
        </wnd>
        <butt img_up="butt_square.png" posx="111" posy="40" key="butt.init.abil">
          <!--특성초기화-->
          <text posx="center" posy="center" font="font_text_s" font_style="stroke" font_size="18" text_col="white" text="2275" />
        </butt>
        <img posx="115" posy="8" file="icon_flask.png" key="img.abil.point" show="off">
          <text posx="11" posy="3" font="font_res_num" font_style="stroke" font_size="20" text_col="green" key="text.remain.point" width="20" align="right"></text>
        </img>
        <img posx="115" posy="24" file="lock_small.png" key="img.num.unlock" show="off">
          <text posx="11" posy="4" font_style="stroke" font="font_res_num" font_size="20" text_col="green" key="text.remain.unlock" width="20" align="right"></text>
        </img>
      </img>
      <img posx="57" posy="63" file="bg_heroes.png">
        <!--영웅리스트-->
        <list posx="4" posy="8" height="281" type="thumb" dir="vert" key="list.hero" width="75" />
      </img>
    </wnd>
  </tech_game>
  <tech_tool>
    <wnd key="wnd.root.tool">
      <img posx="64" posy="57" file="common_bg_inside.png" key="img.tech.bg.black" />
      <!--툴모드 UI-->
    </wnd>
  </tech_tool>
</layout>