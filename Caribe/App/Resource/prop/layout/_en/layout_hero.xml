<?xml version="1.0" encoding="utf-8"?>
<!--영웅고용 씬-->
<layout font_text_m="normal.ttf" font_text_b="bold.ttf">
  <!--모든 씬 백판-->
  <common_bg>
    <wnd posx="0" posy="0" width="640" height="360" key="wnd.common.bg">
      <!--백판-->
      <img posx="0" posy="0" file="common_bg_bottom.png">
        <!--백버튼-->
        <butt posx="510" posy="0" key="butt.back" img_up="common_butt_back.png" />
      </img>
    </wnd>
  </common_bg>
  <!--골드 & 캐쉬 백판-->
  <common_bg_goldcash>
    <wnd posx="230" posy="2" width="0" height="0" key="wnd.common.bg.goldcash">
      <!--골드 & 캐쉬 백판-->
      <img posx="0" posy="0" file="common_bg_goldcash.png">
        <!--골드-->
        <text posx="50" posy="19" font="font_text_b" font_size="34" font_style="stroke" align="center" text_col="white" width="85" text="80000" key="text.common.gold"></text>
        <!--캐쉬-->
        <text posx="186" posy="19" font="font_text_b" font_size="34" font_style="stroke" align="center" text_col="white" width="85" text="80000" key="text.common.cash" />
      </img>
    </wnd>
  </common_bg_goldcash>
  <!--영웅고용 씬 메인-->
  <hero>
    <!--bg-->
    <wnd posx="64" posy="57" width="640" height="303" key="">
      <!--내부 백판-->
      <img posx="0" posy="0" file="common_bg_inside.png"></img>
    </wnd>
    <!--영웅 고용서-->
    <wnd posx="74" posy="66" width="0" height="0">
      <!--일반 영웅 고용서-->
      <wnd posx="0" posy="0" width="0" height="0" key="wnd.empoly.normal">
        <!--양피지 bg & 양피지 타이틀 bg-->
        <img posx="0" posy="0" key="img.bg.normal" file="hero_parchment.png">
          <!--양피지 bg-->
        </img>
        <!--"일반 영웅 고용서" & 설명-->
        <text posx="15" posy="44" width="203" font="font_text_b" font_size="40" font_style="stroke" align="center" text="80032">
          <!--
"일반 영웅 고용서"-->
        </text>
        <text posx="25" posy="102" width="183" font="font_text_m" font_size="35" align="center" font_style="stroke" key="text.desc.normal"></text>
        <!--고용 버튼-->
        <butt posx="63" posy="198" key="butt.empoly.normal" img_up="common_butt_mid.png" text="80036" font="font_text_m" font_size="40" font_style="stroke">
          <img file="hero_gold.png" posx="-13" posy="5" />
        </butt>
      </wnd>
      <!--고급 영웅 고용서-->
      <wnd posx="231" posy="-9" width="" height="" key="wnd.empoly.high">
        <!--양피지 bg & 양피지 타이틀 bg-->
        <img posx="0" posy="0" key="img.bg.high" file="hero_parchment_high.png"></img>
        <!--"고급 영웅 고용서" & 설명-->
        <text posx="30" posy="51" width="203" font="font_text_b" font_size="40" font_style="stroke" align="center" text="80033">
          <!--"고급 영웅 고용서"-->
        </text>
        <text posx="40" posy="113" width="183" font="font_text_m" font_size="35" align="center" font_style="stroke" key="text.desc.high" />
        <!--골드 고용 버튼-->
        <butt posx="36" posy="211" key="butt.empoly.high.gold" img_up="common_butt_mid.png" font="font_text_m" font_size="25" font_style="stroke" text="80036" comma="on">
          <img file="hero_gold.png" posx="-13" posy="5" />
        </butt>
        <!--캐쉬 고용 버튼-->
        <butt posx="152" posy="211" key="butt.empoly.high.cashtem" img_up="common_butt_mid.png" font="font_text_m" font_size="35" font_style="stroke" text="80036">
          <img file="hero_cash.png" posx="-8" posy="5" />
        </butt>
      </wnd>
    </wnd>
  </hero>
  <!--영웅고용 확인 팝업-->
  <askpopup>
    <img posx="62" posy="9" file="common_bg_popup.png" key="img.ask">
      <!--"영웅 고용"-->
      <text posx="3" posy="17" font="font_text_b" text_col="white" font_size="43" font_style="stroke" align="center" text="80053" />
      <!--설명 bg-->
      <img posx="144" posy="126" file="common_blank_m.png"></img>
      <text posx="144" posy="155" width="228" key="text.hero.ask" align="center" font="font_text_m" font_size="35" font_style="stroke" />
      <!--고용 버튼-->
      <butt posx="150" posy="270" img_up="common_butt_mid.png" text_col="white" font="font_text_b" font_size="35" key="butt.ok" font_style="stroke" text="80036"></butt>
      <!--취소 버튼-->
      <butt posx="280" posy="270" img_up="common_butt_mid.png" text_col="white" font="font_text_b" font_size="35" key="butt.cancel" font_style="stroke" text="3"></butt>
    </img>
  </askpopup>
  <!--영웅고용 결과 팝업-->
  <complate>
    <img posx="62" posy="9" file="common_bg_popup.png" key="img.complate">
      <!--"고용 성공"-->
      <text posx="3" posy="17" font="font_text_b" text_col="white" font_size="43" font_style="stroke" align="center" text="80044" />
      <!--영웅 bg & 영웅 이름 bg-->
      <img posx="191" posy="80" file="common_unit_bg_bb.png"></img>
      <!--별 1 ~ 4 윈도우-->
      <wnd posx="209" posy="185" width="0" height="0">
        <img posx="0" posy="0" file="common_etc_bicstar.png" key="img.star1" show="off"></img>
        <img posx="25" posy="0" file="common_etc_bicstar.png" key="img.star2" show="off"></img>
        <img posx="50" posy="0" file="common_etc_bicstar.png" key="img.star3" show="off"></img>
        <img posx="75" posy="0" file="common_etc_bicstar.png" key="img.star4" show="off" />
      </wnd>
      <img posx="176" posy="213" file="legion_unit_blank_b.png"></img>
      <!--영웅 이름 텍스트-->
      <text posx="176" posy="220" width="164" key="text.hero.name" align="center" font="font_text_m" font_size="35" font_style="stroke"></text>
      <!--확인 버튼-->
      <butt posx="213" posy="270" img_up="common_butt_mid.png" text_col="white" font="font_text_b" font_size="35" key="butt.ok" font_style="stroke" text="80009"></butt>
      <!--클랜 이름-->
      <text posx="176" posy="86" width="164" key="text.hero.clan" align="center" font="font_text_m" font_size="35" font_style="stroke" text_col_r="0" text_col_g="162" text_col_b="149" />
    </img>
  </complate>
</layout>